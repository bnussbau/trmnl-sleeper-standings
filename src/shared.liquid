{% comment %}
  Merge roster data (IDX_0) with display information (IDX_1)
  Create an array of teams with combined information
{% endcomment %}

{% assign rosters = IDX_0.data %}
{% assign users = IDX_1.data %}
{% assign user_name = trmnl.plugin_settings.custom_fields_values.user_name %}

{% comment %} Create a lookup for users {% endcomment %}
{% assign user_lookup = '' %}
{% for user in users %}
  {% assign user_lookup = user_lookup
    | append: user.user_id
    | append: user.display_name
    | append: '|'
    | append: user.metadata.team_name
    | append: '||'
  %}
{% endfor %}

 {% comment %} Check if everyone has 0 points {% endcomment %}
 {% assign all_zero_points = true %}
 {% for roster in rosters %}
   {% assign ppts = roster.settings.ppts | plus: 0 %}
   {% if ppts > 0 %}
     {% assign all_zero_points = false %}
     {% break %}
   {% endif %}
 {% endfor %}

 {% if all_zero_points %}
       <span class="title" style="text-align: center;">All teams at zero. Waiting for Fantasy Football to kick off.</span>
 {% endif %}

{% template standings_item %}
{% if style == 'condensed' %}
  <tr>
    <th>
      <span class="label {% if highlight %}label--outline{% endif %}" style="text-align: center;">{{ index }}</span>
    </th>
    <th>
      <span class="label">{{ team_name }}</span>
    </th>
    <th>
      <span class="label {% if highlight %}label--outline{% endif %}" style="text-align: center;">{{ roster.settings.wins }}</span>
    </th>
    <th>
      <span class="label" style="text-align: center;">{{ roster.settings.losses }}</span>
    </th>
    <th>
      <span class="label">{{ roster.settings.fpts }}</span>
    </th>
  </tr>
{% else %}
  <tr>
    <th>
      <span class="label {% if highlight %}label--outline{% endif %}" style="text-align: center;">{{ index }}</span>
    </th>
    <th>
      <span class="label">{{ display_name }}</span>
    </th>
    <th>
      <span class="label">{{ team_name }}</span>
    </th>
    <th>
      <span class="label {% if highlight %}label--outline{% endif %}" style="text-align: center;">{{ roster.settings.wins }}</span>
    </th>
    <th>
      <span class="label" style="text-align: center;">{{ roster.settings.losses }}</span>
    </th>
    <th>
      <span class="label">{{ roster.settings.fpts }}.{{ roster.settings.fpts_decimal }}</span>
    </th>
    <th>
      <span class="label">{{ roster.settings.fpts_against }}</span>
    </th>
    <th>
      <span class="label" style="text-align: center;">{{ roster.settings.waiver_position }}</span>
    </th>
  </tr>
{% endif %}

{% endtemplate %}

